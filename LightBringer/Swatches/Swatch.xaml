<UserControl x:Class="LightBringer.Swatches.Swatch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Border BorderThickness="2" Margin="5,0,5,0" Width="50" Height="50" BorderBrush="{StaticResource ResourceKey=LBLinearGradientBrush}">
            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
            <Canvas Name="SwatchCanvas" Background="Black" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" PreviewMouseLeftButtonDown="SwatchCanvas_PreviewMouseLeftButtonDown" PreviewMouseMove="SwatchCanvas_PreviewMouseMove">
            </Canvas>
        </Border>
    </Grid>
</UserControl>
